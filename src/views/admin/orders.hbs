{{!< ../layouts/main}}

<div class="max-w-6xl mx-auto p-8">
  <h2 class="text-3xl font-bold mb-8 text-gray-800">Pedidos</h2>
  <div class="overflow-x-auto rounded-lg shadow">
    <table class="min-w-full bg-white border border-gray-200">
      <thead class="bg-gradient-to-r from-yellow-200 to-yellow-400">
        <tr>
          <th class="p-4 border-b text-left text-gray-700 font-semibold"># Pedido</th>
          <th class="p-4 border-b text-left text-gray-700 font-semibold">Cliente</th>
          <th class="p-4 border-b text-left text-gray-700 font-semibold">Dirección</th>
          <th class="p-4 border-b text-left text-gray-700 font-semibold">Método de Pago</th>
          <th class="p-4 border-b text-left text-gray-700 font-semibold">Estado</th>
          <th class="p-4 border-b text-left text-gray-700 font-semibold">Fecha</th>
        </tr>
      </thead>
      <tbody>
        {{#each pedidos}}
          <tr class="hover:bg-yellow-50 transition">
            <td class="p-4 border-b font-bold text-blue-700">#{{id}}</td>
            <td class="p-4 border-b">{{cliente.nombre}}</td>
            <td class="p-4 border-b">{{cliente.direccion}}</td>
            <td class="p-4 border-b">
              {{#ifCond metodo_pago '==' 'Efectivo'}}
                <span class="inline-block px-3 py-1 rounded-full bg-green-100 text-green-800 font-semibold">Efectivo</span>
              {{else}}
                <span class="inline-block px-3 py-1 rounded-full bg-blue-100 text-blue-800 font-semibold">PayPal</span>
              {{/ifCond}}
            </td>
            <td class="p-4 border-b">
              {{#ifCond estado '==' 'pendiente'}}
                <span class="inline-block px-3 py-1 rounded-full bg-yellow-200 text-yellow-900 font-semibold">Pendiente</span>
              {{else ifCond estado '==' 'completado'}}
                <span class="inline-block px-3 py-1 rounded-full bg-green-200 text-green-900 font-semibold">Completado</span>
              {{else ifCond estado '==' 'cancelado'}}
                <span class="inline-block px-3 py-1 rounded-full bg-red-200 text-red-900 font-semibold">Cancelado</span>
              {{else}}
                <span class="inline-block px-3 py-1 rounded-full bg-gray-200 text-gray-900 font-semibold">{{estado}}</span>
              {{/ifCond}}
            </td>
            <td class="p-4 border-b text-gray-600">{{fecha}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  {{#unless pedidos.length}}
    <div class="text-center text-blue-600 mt-8 text-lg font-semibold">
      No hay pedidos registrados.
    </div>
  {{/unless}}
</div>