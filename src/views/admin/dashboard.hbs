{{!< layouts/main}}

<div class="flex h-screen bg-gradient-to-r from-white to-[#f8f8f8]">
  <!-- Sidebar -->
  <div class="sidebar w-64 flex-shrink-0 shadow-lg">
    <div class="p-4 border-b border-[#FFD700]/30">
      <h1 class="text-xl font-bold text-[var(--accent)] flex items-center">
        <i class="fas fa-crown mr-2"></i> PANEL ADMINISTRATIVO
      </h1>
      <p class="text-sm text-gray-300">Bienvenido, {{nombre}}</p>
    </div>
    
    <nav class="p-4">
      <ul class="space-y-2">
        <li>
          <a href="/admin/orders" class="flex items-center p-3 rounded-lg hover:bg-[var(--primary-dark)] transition duration-200 {{#if active.pedidos}}bg-[var(--primary-dark)] border-l-4 border-[var(--accent)]{{/if}}">
            <i class="fas fa-clipboard-list text-[var(--accent)] mr-3"></i>
            <span>Pedidos</span>
          </a>
        </li>
        <li>
          <a href="/admin/products/list" class="flex items-center p-3 rounded-lg hover:bg-[var(--primary-dark)] transition duration-200 {{#if active.productos}}bg-[var(--primary-dark)] border-l-4 border-[var(--accent)]{{/if}}">
            <i class="fas fa-boxes text-[var(--accent)] mr-3"></i>
            <span>Productos</span>
          </a>
        </li>
        <li>
          <a href="/admin/reports" class="flex items-center p-3 rounded-lg hover:bg-[var(--primary-dark)] transition duration-200 {{#if active.reportes}}bg-[var(--primary-dark)] border-l-4 border-[var(--accent)]{{/if}}">
            <i class="fas fa-chart-bar text-[var(--accent)] mr-3"></i>
            <span>Reportes</span>
          </a>
        </li>
        <li>
          <a href="/admin/employees" class="flex items-center p-3 rounded-lg hover:bg-[var(--primary-dark)] transition duration-200 {{#if active.empleados}}bg-[var(--primary-dark)] border-l-4 border-[var(--accent)]{{/if}}">
            <i class="fas fa-users text-[var(--accent)] mr-3"></i>
            <span>Empleados</span>
          </a>
        </li>
      </ul>
      
      <div class="mt-8 pt-4 border-t border-[var(--accent)]/20">
        <a href="/logout" class="flex items-center p-3 text-red-400 hover:bg-red-900/20 rounded-lg transition duration-200">
          <i class="fas fa-sign-out-alt mr-3"></i>
          <span>Cerrar Sesión</span>
        </a>
      </div>
    </nav>
  </div>

  <!-- Contenido principal -->
  <div class="flex-1 overflow-auto">
    <header class="header-gradient shadow-sm">
      <div class="flex items-center justify-between px-6 py-4">
        <h2 class="text-xl font-semibold text-gray-800">Principal</h2>
        <div class="flex items-center space-x-4">
          <div class="relative">
            <i class="fas fa-bell text-gray-500 hover:text-[var(--accent)] cursor-pointer"></i>
            <span class="absolute top-0 right-0 w-2 h-2 bg-red-500 rounded-full"></span>
          </div>
          <div class="flex items-center">
            <img src="https://randomuser.me/api/portraits/men/32.jpg" alt="Admin" class="w-8 h-8 rounded-full mr-2">
            <span class="text-sm font-medium">{{user.nombre}}</span>
          </div>
        </div>
      </div>
    </header>

    <main class="p-6">
      <!-- Estadísticas rápidas -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-500">Pedidos Hoy</p>
              <h3 class="text-2xl font-bold">24</h3>
            </div>
            <div class="bg-[var(--accent)]/10 p-3 rounded-full">
              <i class="fas fa-shopping-cart text-[var(--accent)]"></i>
            </div>
          </div>
          <p class="text-green-500 text-sm mt-2"><i class="fas fa-arrow-up mr-1"></i> 12% desde ayer</p>
        </div>
        
        <div class="bg-white rounded-lg shadow p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-500">Ingresos</p>
              <h3 class="text-2xl font-bold">$5,430</h3>
            </div>
            <div class="bg-blue-100 p-3 rounded-full">
              <i class="fas fa-dollar-sign text-blue-500"></i>
            </div>
          </div>
          <p class="text-green-500 text-sm mt-2"><i class="fas fa-arrow-up mr-1"></i> 8% desde ayer</p>
        </div>
        
        <div class="bg-white rounded-lg shadow p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-500">Productos</p>
              <h3 class="text-2xl font-bold">156</h3>
            </div>
            <div class="bg-green-100 p-3 rounded-full">
              <i class="fas fa-boxes text-green-500"></i>
            </div>
          </div>
          <p class="text-red-500 text-sm mt-2"><i class="fas fa-arrow-down mr-1"></i> 3% menos que el mes pasado</p>
        </div>
        
        <div class="bg-white rounded-lg shadow p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-500">Empleados</p>
              <h3 class="text-2xl font-bold">12</h3>
            </div>
            <div class="bg-purple-100 p-3 rounded-full">
              <i class="fas fa-users text-purple-500"></i>
            </div>
          </div>
          <p class="text-gray-500 text-sm mt-2">Sin cambios</p>
        </div>
      </div>

      <!-- Gráficos y tablas -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <div class="lg:col-span-2 bg-white rounded-lg shadow p-6">
          <div class="flex justify-between items-center mb-6">
            <h3 class="font-semibold text-lg">Ventas Recientes</h3>
            <select class="border rounded px-3 py-1 text-sm">
              <option>Últimos 7 días</option>
              <option>Últimos 30 días</option>
              <option>Este mes</option>
            </select>
          </div>
          <div class="h-64">
            <!-- Aquí iría tu gráfico (usarías Chart.js o similar) -->
            <div class="flex items-center justify-center h-full bg-gray-100 rounded">
              <p class="text-gray-500">Gráfico de Ventas</p>
            </div>
          </div>
        </div>
        
        <div class="bg-white rounded-lg shadow p-6">
          <h3 class="font-semibold text-lg mb-6">Pedidos Recientes</h3>
          <div class="space-y-4">
            {{#each pedidosRecientes}}
            <div class="flex items-center justify-between border-b pb-3">
              <div>
                <p class="font-medium">Pedido #{{id}}</p>
                <p class="text-sm text-gray-500">{{fecha}}</p>
              </div>
              <span class="px-2 py-1 text-xs rounded-full 
                {{#if (eq estado 'completado')}}bg-green-100 text-green-800{{/if}}
                {{#if (eq estado 'pendiente')}}bg-yellow-100 text-yellow-800{{/if}}
                {{#if (eq estado 'cancelado')}}bg-red-100 text-red-800{{/if}}">
                {{estado}}
              </span>
            </div>
            {{/each}}
          </div>
          <a href="/admin/orders" class="block text-center mt-4 text-[var(--accent)] hover:underline">Ver todos</a>
        </div>
      </div>
    </main>
  </div>
</div>
