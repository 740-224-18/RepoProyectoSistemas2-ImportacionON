<h1>{{action}} Empleado</h1>
<form action="/admin/employees{{#if empleado}}/edit/{{empleado.id}}{{/if}}" method="POST">
    <div>
        <label for="nombre">Nombre:</label>
        <input type="text" name="nombre" id="nombre" value="{{empleado.nombre}}" required>
    </div>
    <div>
        <label for="apellido">Apellido:</label>
        <input type="text" name="apellido" id="apellido" value="{{empleado.apellido}}" required>
    </div>
    <div>
        <label for="email">Correo Electr√≥nico:</label>
        <input type="email" name="email" id="email" value="{{empleado.email}}" required>
    </div>
    <div>
        <label for="puesto">Puesto:</label>
        <input type="text" name="puesto" id="puesto" value="{{empleado.puesto}}" required>
    </div>
    <button type="submit" class="btn-primary">{{action}} Empleado</button>
</form>
