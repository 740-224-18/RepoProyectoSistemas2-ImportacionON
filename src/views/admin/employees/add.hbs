{{!< ../layouts/main}}

<div class="container mx-auto p-6">
  <div class="bg-[#F8F8F8] rounded-xl shadow-lg overflow-hidden p-6 max-w-3xl mx-auto">
    <h2 class="text-2xl font-bold mb-6 text-[#333333] border-b pb-2 border-[#E8EBE8]">Agregar Empleado</h2>

    {{#if error}}
      <div class="mb-4 p-3 bg-red-100 text-red-700 rounded">
        {{error}}
      </div>
    {{/if}}

    <form action="/admin/employees/add" method="POST" enctype="multipart/form-data" class="space-y-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        
        <!-- Nombre -->
        <div>
          <label class="block text-sm font-medium text-[#333333] mb-1">Nombre(s)</label>
          <input type="text" name="nombres" placeholder="Nombre" required
                 class="w-full p-3 border border-[#E8EBE8] rounded-lg focus:ring-2 focus:ring-[#B90504] focus:border-transparent shadow-sm bg-white text-black placeholder-[#A0A0A0]">
        </div>

        <!-- Apellido -->
        <div>
          <label class="block text-sm font-medium text-[#333333] mb-1">Apellido(s)</label>
          <input type="text" name="apellidos" placeholder="Apellido" required
                 class="w-full p-3 border border-[#E8EBE8] rounded-lg focus:ring-2 focus:ring-[#B90504] focus:border-transparent shadow-sm bg-white text-[#333333] placeholder-[#A0A0A0]">
        </div>

        <!-- CI -->
        <div>
          <label class="block text-sm font-medium text-[#333333] mb-1">Cédula de Identidad</label>
          <input type="text" name="ci" placeholder="Cédula" required
                 class="w-full p-3 border border-[#E8EBE8] rounded-lg focus:ring-2 focus:ring-[#B90504] focus:border-transparent shadow-sm bg-white text-[#333333] placeholder-[#A0A0A0]">
        </div>

        <!-- Celular -->
        <div>
          <label class="block text-sm font-medium text-[#333333] mb-1">Celular</label>
          <input type="tel" name="celular" placeholder="Celular" required
                 class="w-full p-3 border border-[#E8EBE8] rounded-lg focus:ring-2 focus:ring-[#B90504] focus:border-transparent shadow-sm bg-white text-[#333333] placeholder-[#A0A0A0]">
        </div>

        <!-- Fecha de Nacimiento -->
        <div>
          <label class="block text-sm font-medium text-[#333333] mb-1">Fecha de Nacimiento</label>
          <input type="date" name="fecha_nacimiento" required
       class="w-full p-3 border border-[#E8EBE8] rounded-lg focus:ring-2 focus:ring-[#B90504] focus:border-transparent shadow-sm bg-white text-black placeholder-[#A0A0A0]">
        </div>

        <!-- Género -->
        <div>
          <label class="block text-sm font-medium text-[#333333] mb-1">Género</label>
          <select name="genero_id" required
                  class="w-full p-3 border border-[#E8EBE8] rounded-lg focus:ring-2 focus:ring-[#B90504] focus:border-transparent shadow-sm bg-white text-black">
            <option value="" disabled>Seleccione un género</option>
            {{#each generos}}
              <option value="{{cod_genero}}">{{nombre}}</option>
            {{/each}}
          </select>
        </div>


        <!-- Email -->
        <div>
          <label class="block text-sm font-medium text-[#333333] mb-1">Correo Electrónico</label>
          <input type="email" name="email" placeholder="Correo" required
                 class="w-full p-3 border border-[#E8EBE8] rounded-lg focus:ring-2 focus:ring-[#B90504] focus:border-transparent shadow-sm bg-white text-[#333333] placeholder-[#A0A0A0]">
        </div>

        <!-- Contraseña -->
        <div>
          <label class="block text-sm font-medium text-[#333333] mb-1">Contraseña</label>
          <input type="password" name="password" placeholder="Contraseña" required
                 class="w-full p-3 border border-[#E8EBE8] rounded-lg focus:ring-2 focus:ring-[#B90504] focus:border-transparent shadow-sm bg-white text-[#333333] placeholder-[#A0A0A0]">
        </div>

        <!-- Cargo -->
        <div>
          <label class="block text-sm font-medium text-[#333333] mb-1">Cargo</label>
          <select name="cod_cargo" required
                  class="w-full p-3 border border-[#E8EBE8] rounded-lg focus:ring-2 focus:ring-[#B90504] focus:border-transparent shadow-sm bg-white text-[#333333]">
            <option value="" disabled selected>Seleccione un Cargo</option>
            {{#each cargos}}
              <option value="{{cod_cargo}}">{{nombre}}</option>
            {{/each}}
          </select>
        </div>

        <!-- Dirección -->
        <div class="md:col-span-2">
          <label class="block text-sm font-medium text-[#333333] mb-1">Dirección</label>
          <textarea name="direccion" placeholder="Dirección"
                    class="w-full p-3 border border-[#E8EBE8] rounded-lg focus:ring-2 focus:ring-[#B90504] focus:border-transparent h-24 shadow-sm bg-white text-[#333333] placeholder-[#A0A0A0]"></textarea>
        </div>

        <!-- Foto -->
        <div class="md:col-span-2">
          <label class="block text-sm font-medium text-[#333333] mb-1">Foto</label>
          <input type="file" name="foto" accept="image/*"
                 class="w-full text-sm text-[#333333] file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-[#E8EBE8] file:text-[#333333] hover:file:bg-[#D1D5D8]">
          <p class="mt-1 text-xs text-[#666666]">Formatos aceptados: JPG, PNG</p>
        </div>
      </div>

      <div class="flex justify-end space-x-4 pt-4 border-t border-[#E8EBE8]">
        <button type="submit" class="px-6 py-2 bg-[#B90504] text-white rounded-lg hover:bg-[#990100] transition-all duration-200 flex items-center">
          <i class="fas fa-save mr-2"></i> Guardar Empleado
        </button>
        <a href="/admin/employees" class="px-6 py-2 border border-[#E8EBE8] text-[#333333] rounded-lg hover:bg-[#E8EBE8] transition-all duration-200 flex items-center">
          <i class="fas fa-times mr-2"></i> Cancelar
        </a>
      </div>
    </form>

 <!-- Modal para agregar nuevo cargo -->
<div class="mt-8">
  <button type="button" onclick="toggleModal('addCargoModal')"
          class="w-full flex items-center justify-center space-x-2 bg-[#333333] text-white py-2 px-4 rounded-lg hover:bg-[#444444] transition-all duration-200">
    <i class="fas fa-plus"></i>
    <span>Agregar Nuevo Cargo</span>
  </button>

  <!-- Modal -->
  <div id="addCargoModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50">
    <div class="bg-white rounded-lg shadow-xl w-full max-w-md">
      <div class="p-6">
        <h3 class="text-lg font-bold text-black mb-4">Agregar Nuevo Cargo</h3>
        <form action="/admin/employees/add-cargo" method="POST" class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-black mb-1">Nombre del Cargo</label>
            <input type="text" name="nombre" required
                   class="w-full p-2 border border-[#E8EBE8] rounded-lg focus:ring-2 focus:ring-[#B90504] focus:border-transparent bg-white text-[#333333] placeholder-[#A0A0A0]">
          </div>
          <div>
            <label class="block text-sm font-medium text-black mb-1">Salario</label>
            <input type="number" name="salario" required step="0.01"
                   class="w-full p-2 border border-[#E8EBE8] rounded-lg focus:ring-2 focus:ring-[#B90504] focus:border-transparent bg-white text-[#333333] placeholder-[#A0A0A0]">
          </div>
          <div>
            <label class="block text-sm font-medium text-black mb-1">Descripción</label>
            <textarea name="descripcion" rows="3" placeholder="Descripción del cargo"
                      class="w-full p-2 border border-[#E8EBE8] rounded-lg focus:ring-2 focus:ring-[#B90504] focus:border-transparent bg-white text-[#333333] placeholder-[#A0A0A0]"></textarea>
          </div>
          <div class="flex justify-end space-x-3 pt-2">
            <button type="button" onclick="toggleModal('addCargoModal')"
                    class="px-4 py-2 text-black hover:bg-[#E8EBE8] rounded-lg transition-all duration-200">
              Cancelar
            </button>
            <button type="submit"
                    class="px-4 py-2 bg-[#B90504] text-white rounded-lg hover:bg-[#990100] transition-all duration-200">
              Guardar Cargo
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
