{{!< ../layouts/main}}
<div class="p-6 max-w-xl mx-auto bg-white rounded shadow">
  <h2 class="text-xl font-bold mb-4">Agregar Empleado</h2>
  <form action="/admin/employees/add" method="POST" enctype="multipart/form-data" class="space-y-4">

    <input type="text" name="nombre" placeholder="Nombre" required pattern="[A-Za-zÁ-ú\s]{2,}" maxlength="100"
      class="w-full p-2 border rounded focus:ring-2 focus:ring-red-500" title="Solo letras y espacios (mínimo 2 caracteres)">

    <input type="text" name="apellido" placeholder="Apellido" required pattern="[A-Za-zÁ-ú\s]{2,}" maxlength="100"
      class="w-full p-2 border rounded focus:ring-2 focus:ring-red-500">

    <input type="email" name="correo" placeholder="Correo electrónico" required maxlength="100"
      class="w-full p-2 border rounded focus:ring-2 focus:ring-red-500">

    <input type="tel" name="telefono" placeholder="Teléfono (opcional)" maxlength="15" pattern="[0-9]{7,15}"
      class="w-full p-2 border rounded focus:ring-2 focus:ring-red-500">

    <input type="text" name="rol" placeholder="Rol (Ej: Administrador)" maxlength="50"
      class="w-full p-2 border rounded focus:ring-2 focus:ring-red-500">

    <input type="file" name="foto" accept="image/*"
      class="w-full p-2 border rounded focus:ring-2 focus:ring-red-500">

    <button type="submit"
      class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition">Guardar</button>
  </form>
</div>
