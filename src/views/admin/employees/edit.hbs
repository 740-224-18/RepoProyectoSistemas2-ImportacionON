{{!< ../layouts/main}}
<div class="p-6 max-w-xl mx-auto bg-white rounded shadow">
  <h2 class="text-xl font-bold mb-4">Editar Empleado</h2>
  <form action="/admin/employees/edit/{{empleado.id}}" method="POST" enctype="multipart/form-data" class="space-y-4">

    <input type="text" name="nombre" value="{{empleado.nombre}}" required pattern="[A-Za-zÁ-ú\s]{2,}" maxlength="100"
      class="w-full p-2 border rounded focus:ring-2 focus:ring-red-500">

    <input type="text" name="apellido" value="{{empleado.apellido}}" required pattern="[A-Za-zÁ-ú\s]{2,}" maxlength="100"
      class="w-full p-2 border rounded focus:ring-2 focus:ring-red-500">

    <input type="email" name="correo" value="{{empleado.correo}}" required maxlength="100"
      class="w-full p-2 border rounded focus:ring-2 focus:ring-red-500">

    <input type="tel" name="telefono" value="{{empleado.telefono}}" pattern="[0-9]{7,15}" maxlength="15"
      class="w-full p-2 border rounded focus:ring-2 focus:ring-red-500">

    <input type="text" name="rol" value="{{empleado.rol}}" maxlength="50"
      class="w-full p-2 border rounded focus:ring-2 focus:ring-red-500">

    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Foto actual:</label>
      {{#if empleado.foto}}
        <img src="/uploads/{{empleado.foto}}" class="w-16 h-16 rounded-full object-cover">
      {{else}}
        <p class="text-sm text-gray-400 italic">Sin foto</p>
      {{/if}}
    </div>

    <input type="file" name="foto" accept="image/*" class="w-full p-2 border rounded focus:ring-2 focus:ring-red-500">

    <button type="submit"
      class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">Actualizar</button>
  </form>
</div>
