{{!< ../layouts/main}}

<div class="p-6 bg-black rounded shadow text-white">
  <a href="/admin/dashboard" class="mt-4 inline-block bg-green-600 hover:bg-green-700 transition text-white py-2 px-4 rounded">
    ← Volver al Dashboard
  </a>

  <h2 class="text-2xl font-bold my-6 border-b border-gray-600 pb-2">Lista de Empleados</h2>

  <div class="overflow-x-auto">
    <table class="min-w-full table-auto border-collapse border border-gray-700">
      <thead>
        <tr class="bg-gray-800 text-left text-sm uppercase text-gray-300">
          <th class="border border-gray-600 px-4 py-2">Foto</th>
          <th class="border border-gray-600 px-4 py-2">Nombre</th>
          <th class="border border-gray-600 px-4 py-2">Apellido</th>
          <th class="border border-gray-600 px-4 py-2">Cédula</th>
          <th class="border border-gray-600 px-4 py-2">Celular</th>
          <th class="border border-gray-600 px-4 py-2">Dirección</th>
          <th class="border border-gray-600 px-4 py-2">Email</th>
          <th class="border border-gray-600 px-4 py-2">Cargo</th>
          <th class="border border-gray-600 px-4 py-2">Acciones</th>
        </tr>
      </thead>
      <tbody>
        {{#each empleados}}
          <tr class="bg-gray-900 even:bg-gray-800">
            <td class="border border-gray-700 px-4 py-2">
              {{#if foto}}
                <img src="/images/employees/{{foto}}" alt="Foto de {{nombres}}" class="w-12 h-12 object-cover rounded-full mx-auto">
              {{else}}
                <span class="text-gray-400 italic block text-center">Sin foto</span>
              {{/if}}
            </td>
            <td class="border border-gray-700 px-4 py-2 align-middle">{{nombres}}</td>
            <td class="border border-gray-700 px-4 py-2 align-middle">{{apellidos}}</td>
            <td class="border border-gray-700 px-4 py-2 align-middle">{{ci}}</td>
            <td class="border border-gray-700 px-4 py-2 align-middle">{{celular}}</td>
            <td class="border border-gray-700 px-4 py-2 align-middle">{{direccion}}</td>
            <td class="border border-gray-700 px-4 py-2 align-middle break-words max-w-xs">{{email}}</td>
            <td class="border border-gray-700 px-4 py-2 align-middle">{{cargo_nombre}}</td>
            <td class="border border-gray-700 px-4 py-2 align-middle whitespace-nowrap">
              <a href="/admin/employees/edit/{{cod_empleado}}" class="text-blue-400 hover:underline mr-3" aria-label="Editar {{nombres}} {{apellidos}}">Editar</a>
              <a href="/admin/employees/delete/{{cod_empleado}}" class="text-red-500 hover:underline" onclick="return confirm('¿Estás seguro de que quieres eliminar este empleado?')" aria-label="Eliminar {{nombres}} {{apellidos}}">Eliminar</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <a href="/admin/employees/add" class="mt-6 inline-block bg-green-600 hover:bg-green-700 transition text-white py-3 px-6 rounded font-semibold">
    + Agregar Nuevo Empleado
  </a>
</div>
