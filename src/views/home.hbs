<div id="welcome-message" class="text-center my-24 text-3xl">
    <h1>BIENVENIDO <b>{{toUpperCase nombre}}</b></h1>
</div>

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{#if title}}{{title}}{{else}}ImportadoraON{{/if}}</title>
    
    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.0.1/tailwind.min.css">
    
    <!-- Font Awesome -->
    <link href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" rel="stylesheet">

    <style>
      :root {
        --azul-oscuro: #0A1122;
        --azul-marino: #0F172A;
        --oro: #FFD700;
        --oro-claro: #FFAA00;
        --texto-claro: #F8FAFC;
      }
      
      .nav-link-gold {
        border: 2px solid var(--oro);
        color: var(--oro);
        transition: all 0.3s ease;
      }
      
      .nav-link-gold:hover {
        background-color: var(--oro);
        color: var(--azul-marino);
      }
      
      .btn-gold {
        background: linear-gradient(to right, var(--oro), var(--oro-claro));
        color: var(--azul-marino);
        font-weight: 600;
      }
      
      .btn-gold:hover {
        background: linear-gradient(to right, var(--oro-claro), var(--oro));
      }
    </style>
  </head>
  <body class="bg-[#0A1122] text-[#F8FAFC]">

    <!-- Sección de Bienvenida -->
    <section class="py-12 px-4 md:px-24 bg-gradient-to-b from-[#0A1122] to-[#0F172A]">
      <div class="container mx-auto text-center">
        <h2 class="text-4xl md:text-4xl font-bold text-[#FFD700]-700 mb-4">BIENVENIDO A IMPORTADORA O-N</O-N></h2>
        <p class="text-[#F8FAFC]/80 text-lg max-w-2xl mx-auto">Líderes en importación y distribución de productos de alta calidad. Ofrecemos soluciones confiables para tus necesidades comerciales.</p>
      </div>
    </section>

    <!-- Sección de Servicios -->
    <section class="py-12 px-4 md:px-24 bg-[#0F172A]">
      <div class="container mx-auto">
        <h2 class="text-3xl font-bold text-[#FFD700] text-center mb-8">Nuestros Servicios</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="bg-[#0A1122] p-6 rounded-lg border border-[#FFD700]/30 shadow-lg text-center hover:shadow-[#FFD700]/20 transition duration-300">
            <i class="fas fa-shipping-fast text-4xl text-[#FFD700] mb-4"></i>
            <h3 class="text-xl font-bold mb-2 text-[#FFD700]">Importación Rápida</h3>
            <p class="text-[#F8FAFC]/80">Garantizamos entregas rápidas y seguras desde cualquier parte del mundo.</p>
          </div>
          <div class="bg-[#0A1122] p-6 rounded-lg border border-[#FFD700]/30 shadow-lg text-center hover:shadow-[#FFD700]/20 transition duration-300">
            <i class="fas fa-boxes text-4xl text-[#FFD700] mb-4"></i>
            <h3 class="text-xl font-bold mb-2 text-[#FFD700]">Amplio Catálogo</h3>
            <p class="text-[#F8FAFC]/80">Variedad de productos para satisfacer todas tus necesidades comerciales.</p>
          </div>
          <div class="bg-[#0A1122] p-6 rounded-lg border border-[#FFD700]/30 shadow-lg text-center hover:shadow-[#FFD700]/20 transition duration-300">
            <i class="fas fa-headset text-4xl text-[#FFD700] mb-4"></i>
            <h3 class="text-xl font-bold mb-2 text-[#FFD700]">Soporte Personalizado</h3>
            <p class="text-[#F8FAFC]/80">Nuestro equipo está siempre disponible para ayudarte.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Sección de Productos Destacados -->
    <section class="py-12 px-4 md:px-24 bg-[#0A1122]">
      <div class="container mx-auto">
        <h2 class="text-3xl font-bold text-[#FFD700] text-center mb-8">Productos Destacados</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {{#each productosDestacados}}
          <div class="bg-[#0F172A] p-6 rounded-lg border border-[#FFD700]/30 shadow-lg hover:shadow-[#FFD700]/20 transition duration-300">
            <img src="{{imagen}}" alt="{{nombre}}" class="w-full h-48 object-cover mb-4 rounded-lg">
            <h3 class="text-xl font-bold mb-2 text-[#FFD700]">{{nombre}}</h3>
            <p class="text-[#F8FAFC]/80 mb-4">{{descripcion}}</p>
            <span class="text-lg font-bold text-[#FFD700]">${{precio}}</span>
            <button class="mt-4 w-full bg-gradient-to-r from-[#FFD700] to-[#FFAA00] text-[#0F172A] font-bold py-2 px-4 rounded hover:from-[#FFAA00] hover:to-[#FFD700] transition duration-300">
              Ver Detalles
            </button>
          </div>
          {{/each}}
        </div>
      </div>
    </section>

    <!-- Pie de Página -->
    <footer class="bg-[#0F172A] text-[#FFD700]/80 py-8 border-t border-[#FFD700]/10">
      <div class="container mx-auto text-center">
        <div class="flex justify-center space-x-6 mb-4">
          <a href="#" class="text-[#FFD700]/70 hover:text-[#FFD700] text-xl"><i class="fab fa-facebook"></i></a>
          <a href="#" class="text-[#FFD700]/70 hover:text-[#FFD700] text-xl"><i class="fab fa-instagram"></i></a>
          <a href="#" class="text-[#FFD700]/70 hover:text-[#FFD700] text-xl"><i class="fab fa-whatsapp"></i></a>
        </div>
        <p class="mb-2">© {{currentYear}} Importadora O-N. Todos los derechos reservados.</p>
        <div class="text-sm">
          <a href="#" class="text-[#FFD700]/70 hover:text-[#FFD700] mx-2">Términos y Condiciones</a>
          <a href="#" class="text-[#FFD700]/70 hover:text-[#FFD700] mx-2">Política de Privacidad</a>
        </div>
      </div>
    </footer>

    <!-- Script para el año actual -->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const yearElement = document.querySelector('footer p');
        if (yearElement) {
          const currentYear = new Date().getFullYear();
          yearElement.textContent = yearElement.textContent.replace('{{currentYear}}', currentYear);
        }
      });
    </script>

    {{{body}}}
  </body>
</html>

<script>
    // Ocultar el mensaje después de 3 segundos y mostrar el contenido principal
    setTimeout(() => {
    document.getElementById('welcome-message').style.opacity = '0';
    setTimeout(() => {
        document.getElementById('welcome-message').style.display = 'none';
        document.getElementById('main-content').classList.remove('hidden');
    }, 500); // Espera a que termine la transición
}, 3000);
</script>