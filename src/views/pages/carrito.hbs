{{!< ../layouts/main}}

<div class="container mx-auto p-6">
  <h2 class="text-2xl font-bold mb-4">Tu Carrito de Compras</h2>

  {{#if productos.length}}
    <table class="w-full border border-gray-300 rounded mb-6">
      <thead class="bg-gray-100">
        <tr>
          <th class="p-3 border-b text-left">Producto</th>
          <th class="p-3 border-b text-center">Cantidad</th>
          <th class="p-3 border-b text-right">Precio Unitario (Bs.)</th>
          <th class="p-3 border-b text-right">Subtotal (Bs.)</th>
        </tr>
      </thead>
      <tbody>
        {{#each productos}}
          <tr>
            <td class="p-3 border-b">{{nombre}}</td>
            <td class="p-3 border-b text-center">{{cantidad}}</td>
            <td class="p-3 border-b text-right">{{precio}}</td>
            <td class="p-3 border-b text-right">{{subtotal}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>

    <p class="text-xl font-semibold text-right mb-6">Total: Bs. {{total}}</p>

    <form id="confirmar-compra-form" class="text-right">
      <button type="button" id="btn-confirmar" class="btn-gold py-2 px-6 rounded-full">Confirmar Compra</button>
    </form>

    <!-- Modal de método de pago -->
    <div id="modal-metodo-pago" class="fixed inset-0 bg-black bg-opacity-40 flex items-center justify-center z-50 hidden">
      <div class="bg-white rounded-lg p-8 w-full max-w-md text-center">
        <h3 class="text-xl font-bold mb-4">Selecciona el método de pago</h3>
        <form id="form-metodo-pago" action="/carrito/confirmar" method="POST">
          <input type="hidden" name="total" value="{{total}}">
          <div class="mb-6">
            <label class="block mb-2">
              <input type="radio" name="metodo_pago" value="Efectivo" required>
              Efectivo
            </label>
            <label class="block">
              <input type="radio" name="metodo_pago" value="PayPal" required>
              PayPal
            </label>
          </div>
          <div id="datos-recibo" class="mb-4 hidden">
            <p class="font-semibold mb-2">Datos para el recibo:</p>
            <p>Nombre: {{cliente.nombre}}</p>
            <p>Dirección: {{cliente.direccion}}</p>
            <p>Teléfono: {{cliente.telefono}}</p>
          </div>
          <button type="submit" class="bg-green-600 hover:bg-green-700 text-white px-6 py-2 rounded-full font-semibold">Finalizar Pedido</button>
          <button type="button" id="cerrar-modal" class="ml-4 text-gray-500 hover:underline">Cancelar</button>
        </form>
      </div>
    </div>

    <script>
      document.getElementById('btn-confirmar').onclick = function() {
        document.getElementById('modal-metodo-pago').classList.remove('hidden');
      };
      document.getElementById('cerrar-modal').onclick = function() {
        document.getElementById('modal-metodo-pago').classList.add('hidden');
      };
      document.querySelectorAll('input[name="metodo_pago"]').forEach(function(radio) {
        radio.onchange = function() {
          if (this.value === 'Efectivo') {
            document.getElementById('datos-recibo').classList.remove('hidden');
          } else {
            document.getElementById('datos-recibo').classList.add('hidden');
          }
        };
      });
    </script>

  {{else}}
    <p class="text-center text-blue-600 text-lg">No hay productos en el carrito.</p>
  {{/if}}

  {{#if error_msg}}
    <p class="text-red-600 mt-4 text-center">{{error_msg}}</p>
  {{/if}}

  {{#if success_msg}}
    <p class="text-green-600 mt-4 text-center">{{success_msg}}</p>
  {{/if}}
</div>